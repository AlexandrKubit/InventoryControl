@page "/units/form/{GuidString}"
@inject NavigationManager Navigation

<PageTitle>Единица измерения</PageTitle>
<h2>Единицы измерения</h2>

@if (Unit == null)
{
    <div>Загрузка...</div>
    return;
}

<div>
    <button onclick="@SaveAsync" class="btn btn-success">Сохранить</button>@(" ")
    @if (Unit.Guid != Guid.Empty)
    {
        <button onclick="@DeleteAsync" class="btn btn-danger">Удалить</button>@(" ")
        if (Unit.Condition == 1)
        {
            <button onclick="@ChangeConditionAsync" class="btn btn-warning">В архив</button>
        }
        else
        {
            <button onclick="@ChangeConditionAsync" class="btn btn-primary">В работу</button>
        }
    }
</div>
<br />
<div>
    <table>
        <tbody>
            <tr>
                <td>Наименование</td>
                <td><input class="form-control" value="@Unit.Name" onchange="@((ChangeEventArgs args) => Unit.Name = (string)args.Value)" /></td>
            </tr>
        </tbody>
    </table>
</div>